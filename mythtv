# Use for backwards commercial skip
begin
   prog = mythtv
   button = Replay
   config = Q
end

# Use for forward commercial skip
begin
   prog = mythtv
   button = Skip
   config = Z
end

# Toggle subtitles (closed captions)
begin
   prog = mythtv
   button = Teletext
   config = T   
end

begin
   prog = mythtv
   button = Green
   config = e, z
end

begin
   prog = mythtv
   button = Yellow
   config = m   
end


begin
   prog = mythtv
   button = Blue
   config = W   
end




# Special Jump Buttons
begin
   prog = mythtv
   button = LiveTV
   config = ALT+L
end

# RecordedTV button = Jump to TV Recording Playback section.
# Config button defined via MythWeb's KeyBindings JumpPoints editor.
begin
    prog = mythtv
    button = RecTV
    config = Ctrl+r
end


# Guide = Show EPG while in TV mode.
begin
    prog = mythtv
    button = Guide
    config = Alt+g
end

# DVDMenu = Bring up OSD & playlist menus.
begin
    prog = mythtv
    button = DVD
    config = Ctrl+d
end



# Start Mythtv
begin
   prog = irexec
   button = Red
   config = myth_start.sh
end

# Amplifier Buttons
# Power will change the AV source
begin
   prog = irexec
   button = Power
   config = myth_equipement.sh
end

